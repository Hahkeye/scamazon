<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Recent buys:</h3>
  </div>

  {{#if cart.length}}
  <div class="col-md-6 project-list">
    <h3>Cart:</h3>

    {{#each cart as |product|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/cart/{{product.id}}">{{product.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{product.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>