{{#each product}}
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h3 class="card-title">{{name}}</h3>
    <img src="/assets/images/{{img_name}}" class="card-img-top" alt="...">
    <div class="d-flex row position-relative p-3">
      <img src="/assets/images/download.jpg" width="30" height="30">
      <p class="card-text">{{price}}</p>
    </div>
    <form action="/cart/add" method="post">
        <input type="hidden" name="product_id" value="{{id}}">
        <button type="submit" class="btn btn-primary">Buy Me Now!</button>
    </form>
    {{!-- <a href="/cart/add" class="btn btn-primary">Buy Me Now!</a> --}}
  </div>
  <div class="description">
    <p class="card-description"> {{description}}</p>
  </div>
</div>
{{/each}}